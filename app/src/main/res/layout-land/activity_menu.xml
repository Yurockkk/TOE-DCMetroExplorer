<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    tools:context="com.yubo.han.toe.activity.MenuActivity">

    <ImageView
        android:id="@+id/app_name_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_toe"/>

    <Button
        android:id="@+id/near_station_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/near_station_button_text"/>
    <Button
        android:id="@+id/select_station_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_station_button_text"/>
    <Button
        android:id="@+id/favorite_landmark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_landmark_button_text"/>

</LinearLayout>
